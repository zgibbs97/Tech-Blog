<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">Project Title:</label>
                <input class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <label for="blog-desc">description:</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
                <div class="form-group">
                    <label for="blog-date">Date Created</label>
                    <input class="form-input" type="text" id="blog-date" name="blog-date" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if blog.length}}
    <div class="col-md-6 blog-list">
        <h3>Current Blogs:</h3>

        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blogPost/{{blog.id}}">{{blog.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>